<style>
div {
 background-color: black;
 color: white;
 width: 100%;
 height: 100%;
}
</style>
<div></div>
<script>
document.querySelector("div").onmousedown = function(e) {
 document.querySelector("div").innerHTML = e.which;
 switch(e.which){
  case 1:
   document.querySelector("div").innerHTML += " left click";
   break;
  case 2:
   document.querySelector("div").innerHTML += " middle click";
   break;
  case 3:
   document.querySelector("div").innerHTML += " rigth click";
   break;
 }
}
</script>  
