<!DOCTYPE html> 
<html> 
<body> 
<div></div>
<video controls>
  <source src="https://www.w3schools.com/jsref/mov_bbb.mp4" type="video/mp4">
  Your browser does not support HTML5 video.
</video>
<button> Set slow motion </button>
<script>
var myVideo = document.querySelector("video");
var myDiv = document.querySelector("div");

myVideo.onloadstart = function() {
  myDiv.innerHTML += "onloadstart<br>";
}
myVideo.ondurationchange = function() {
  myDiv.innerHTML += "ondurationchange<br>";
} 
myVideo.onloadedmetadata = function() {
  myDiv.innerHTML += "onloadedmetadata<br>";
}
myVideo.onloadeddata = function() {
  myDiv.innerHTML += "onloadeddata<br>";
} 
myVideo.onprogress = function() {
  myDiv.innerHTML += "onprogress<br>";
} 
myVideo.oncanplay = function() {
  myDiv.innerHTML += "oncanplay<br>";
}
myVideo.oncanplaythrough = function() {
  myDiv.innerHTML += "oncanplaythrough<br>";
}
myVideo.onplay = function() {
  myDiv.innerHTML += "onplay<br>";
}
myVideo.onplaying = function() {
  myDiv.innerHTML += "onplaying<br>";
} 
myVideo.onended = function() {
  myDiv.innerHTML += "onended<br>";
}
myVideo.onratechange = function() {
  myDiv.innerHTML += "onratechange<br>";
}
myVideo.onseeked = function() {
  myDiv.innerHTML += "onseeked<br>";
}
myVideo.onseeking = function() {
  myDiv.innerHTML += "onseeking<br>";
}

document.querySelector("button").onclick = function() {
  myVideo.playbackRate = 0.3;
 } 
</script>

</body> 
</html>
 
