<div>
<input type="text">
</div>
<p></p>
<script>

document.querySelector("input").addEventListener("focusin", function() {
  document.querySelector("p").innerHTML += this.tagName + "focusin<br>";
});
document.querySelector("input").addEventListener("focusout", function() {
  document.querySelector("p").innerHTML += this.tagName + "focusout<br>";
});
document.querySelector("input").addEventListener("focus", function() {
  document.querySelector("p").innerHTML += this.tagName + "focus<br>";
});
document.querySelector("input").addEventListener("blur", function() {
  document.querySelector("p").innerHTML += this.tagName + "blur<br>";
});


document.querySelector("div").addEventListener("focusin", function() {
  document.querySelector("p").innerHTML += this.tagName + "focusin<br>";
});
document.querySelector("div").addEventListener("focusout", function() {
  document.querySelector("p").innerHTML += this.tagName + "focusout<br>";
});
document.querySelector("div").addEventListener("focus", function() {
  document.querySelector("p").innerHTML += this.tagName + "focus<br>";
});
document.querySelector("div").addEventListener("blur", function() {
  document.querySelector("p").innerHTML += this.tagName + "blur<br>";
});

</script>
