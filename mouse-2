<script>
document.querySelector("div").onmousemove = function(e) {
 this.innerHTML = "pageX: " + e.pageX + "<br>pageY: " + e.pageY + "<br>screenX: " + e.screenX + "<br>screenY: " + e.screenY;
}
</script>
