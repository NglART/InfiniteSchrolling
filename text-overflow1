<input type="button" value="textOverflow clip" name="clip"></input>
<input type="button" value="textOverflow ellipsis" name="ellipsis"></input>
<input type="button" value="textOverflow string" name="string"></input>
<input type="button" value="textOverflow initial" name="initial"></input>
<input type="button" value="textOverflow inherit" name="inherit"></input>

<script>

 var btn = document.querySelectorAll("input");
 var myDiv = document.querySelector("div");

 btn.forEach((e) => {
  e.addEventListener("click",function() { 
   switch(e.name){
    case "clip" : 
     myDiv.style.textOverflow = e.name;
     break;
    case "ellipsis" : 
     myDiv.style.textOverflow = e.name;
     break;
    case "ellipsis" : 
     myDiv.style.textOverflow = e.name;
     break;
    case "string" : 
     myDiv.style.textOverflow = e.name;
     break;
    case "initial" : 
     myDiv.style.textOverflow = e.name;
     break;
    case "inherit" : 
     myDiv.style.textOverflow = e.name;
     break;
   }
  });
 });

</script>
