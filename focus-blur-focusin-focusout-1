<input type="text">
<input type="text">
<script>

document.querySelectorAll("input")[0].addEventListener("focusin", function() {
  document.querySelectorAll("input")[0].style.backgroundColor = "red";
});
document.querySelectorAll("input")[0].addEventListener("focusout", function() {
  document.querySelectorAll("input")[0].style.backgroundColor = "blue";
});

document.querySelectorAll("input")[1].addEventListener("focus", function() {
  document.querySelectorAll("input")[1].style.backgroundColor = "red";
});
document.querySelectorAll("input")[1].addEventListener("blur", function() {
  document.querySelectorAll("input")[1].style.backgroundColor = "blue";
});

</script>
