<style>
div {
 background-color: black;
 color: white;
 width: 100%;
 height: 100%;
}
</style>
<div></div>
<script>
document.querySelector("div").onmouseover = function(e) {
 document.querySelector("div").innerHTML = e.type;
}
document.querySelector("div").onmouseup = function(e) {
 document.querySelector("div").innerHTML = e.type;
}
document.querySelector("div").onmousedown = function(e) {
 document.querySelector("div").innerHTML = e.type;
}
</script> 
