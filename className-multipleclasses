}

.test {
  background-color: lightblue; 
}

.example {
  text-align: center;
  font-size: 25px;
  color: black;
  margin-bottom: 10px;
}
</style>

<script>
function myFunction() {
  var x = document.getElementById("myDIV").className;
  document.getElementById("demo").innerHTML = x;
}
</script>

