<script>
 document.body.onload = function() {
  for(let i=0 ; i<30 ; i++ ) {
   document.body.innerHTML +=  "rooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooow " + i + "<br>";
  }
 }
 var sticky = document.querySelector("img").offsetTop;
 document.body.onscroll = function() {
  if (window.pageYOffset >= sticky) {  
   document.querySelector("img").classList.add("sticky");
  } else {
   document.querySelector("img").classList.remove("sticky");
  } 
 }
</script>
</body>
